<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.Fragment_TrangChu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#51EF38"
        >
        <ImageView
            android:id="@+id/ivUser"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:src="@drawable/user"
            android:layout_margin="10sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60sp"
            android:layout_margin="10sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="#fff"
            android:text="Quản Lí Chi Tiêu"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E6F3A919"
        >
        <ImageView
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:src="@drawable/icon"
            android:layout_margin="10sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:paddingEnd="20sp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10sp"
                android:textSize="30sp"
                android:textColor="#02B902"
                android:text="Số tiền hiện tại"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:gravity="center"
                android:textSize="20sp"
                android:text="1470000 VND"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B8000000"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:layout_margin="20sp"
            android:id="@+id/btnKhoanThu"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="200sp"
            android:layout_height="50sp"
            android:text="Khoản Thu"
            android:backgroundTint="#D9D9D9"/>
        <Button
            android:layout_margin="20sp"
            android:id="@+id/btnKhoanChi"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="200sp"
            android:layout_height="50sp"
            android:text="Khoản Chi"
            android:backgroundTint="#D9D9D9"/>
        <Button
            android:layout_margin="20sp"
            android:id="@+id/btnThongKe"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="200sp"
            android:layout_height="50sp"
            android:text="Thống kê"
            android:backgroundTint="#D9D9D9"/>
        <Button
            android:layout_margin="20sp"
            android:id="@+id/btnMucTieu"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="200sp"
            android:layout_height="50sp"
            android:text="Mục Tiêu"
            android:backgroundTint="#D9D9D9"/>
        <Button
            android:layout_margin="20sp"
            android:id="@+id/btnTroGiup"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="200sp"
            android:layout_height="50sp"
            android:text="Trợ giúp"
            android:backgroundTint="#D9D9D9"/>
    </LinearLayout>
    <fragment
        android:id="@+id/details_fragment"
        class="com.example.quanlychitieu.Fragment.Fragment_KhoanChi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>