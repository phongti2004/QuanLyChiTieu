<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Activity_DangKi">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#51EF38"
    >
    <ImageView
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:src="@drawable/icon"
        android:layout_margin="20sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80sp"
        android:layout_margin="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="32sp"
        android:textColor="#fff"
        android:text="Quản Lí Chi Tiêu"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="#B8000000"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="50sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="Đăng kí tài khoản"
            android:layout_gravity="center"

            />

        <EditText
            android:id="@+id/edtTK"
            android:layout_marginTop="100sp"
            android:layout_gravity="center"
            android:layout_width="250sp"
            android:layout_height="50sp"
            android:layout_marginBottom="10sp"
            android:background="#000"
            android:paddingStart="20sp"
            android:hint="Tài Khoản"
            android:textColor="#fff"
            android:textColorHint="#FFACACAC"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtMK"
            android:layout_gravity="center"
            android:layout_width="250sp"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:paddingStart="20sp"
            android:background="#000"
            android:hint="Mật khẩu"
            android:textColor="#fff"
            android:textColorHint="#FFACACAC"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_marginTop="90sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <Button
                android:id="@+id/btnDangKi"
                android:textSize="20sp"
                android:layout_width="200sp"
                android:layout_height="50sp"
                android:text="Đăng kí"
                android:backgroundTint="#51EF38"
                android:layout_marginBottom="10sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã có tài khoản?"
                android:layout_marginEnd="40dp"
                android:textStyle="italic"
                android:textColor="#AEFFFFFF"
                android:layout_marginBottom="2sp"
                />
            <Button
                android:id="@+id/btnDangNhap"
                android:textSize="20sp"
                android:layout_width="200sp"
                android:layout_height="50sp"
                android:text="Đăng nhập"
                android:textColor="#51EF38"
                android:backgroundTint="#000000"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>