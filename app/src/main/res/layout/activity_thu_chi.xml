<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Activity_ThuChi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#51EF38"
        >
        <ImageView
            android:id="@+id/ivUser"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:src="@drawable/user"
            android:layout_margin="10sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60sp"
            android:layout_margin="10sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="#fff"
            android:text="Quản Lí Chi Tiêu"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E6F3A919"
        >
        <ImageView
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:src="@drawable/icon"
            android:layout_margin="10sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:paddingEnd="20sp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10sp"
                android:textSize="30sp"
                android:textColor="#02B902"
                android:text="Số tiền hiện tại"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:gravity="center"
                android:textSize="20sp"
                android:text="1470000 VND"
                />
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        app:tabSelectedTextColor="#3D65F4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>